<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:logo), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <li><%= link_to t(:help), help_path %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t(:manage_users), admin_users_path %></li>
            <li><%= link_to t(:manage_categories), admin_categories_path %></li>
            <li><%= link_to t(:manage_words), admin_words_path %></li>
          <% else %>
            <li><%= link_to t(:all_users), users_path %></li>
            <li><%= link_to t(:all_categories), categories_path %></li>
            <li><%= link_to t(:all_words), words_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(:account)%> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), current_user %></li>
              <li><%= link_to t(:edit_user), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t(:log_out), logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:sign_up), signup_path %></li>
          <li><%= link_to t(:log_in), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>