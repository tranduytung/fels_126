<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <ul class="users follow">
        <%= render @user %>
      </ul>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="center col-md-8">
    <h3><%= t :activities %></h3>
    <% if @activity.any? %>
      <table class="table table-hover">
        <%= render @activity %>
      </table>
    <% end %>
    <%= will_paginate @activity %>
  </div>
</div>
