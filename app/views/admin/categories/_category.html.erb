<li>
  <h3><%= link_to category.name, category %></h3>
  <span><%= category.content%></span>
  <%= link_to new_admin_category_word_path(category),
    class: "btn btn-info" do %>
    <span><%= t :new_word %></span>
  <% end %>
  <%= link_to edit_admin_category_path(category),
    class: "btn btn-info" do %>
    <span><%= t :edit %></span>
  <% end %>
  <%= link_to admin_category_path(category), method: :delete,
      data: {confirm: t("warning.delete")}, class: "btn btn-info" do %>
      <span><%= t :delete %></span>
    <% end %>
</li>